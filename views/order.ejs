<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head") %>
    <title>Order Confirmation</title>
    <style>
      .confirmation-header {
        background-color: #28a745;
        color: white;
        padding: 20px 0;
        margin-bottom: 30px;
        border-radius: 5px;
      }

      .delivery-animation {
        margin-top: 50px;
        height: 100px;
        position: relative;
        overflow: hidden;
        background: #f8f9fa;
        border-radius: 5px;
      }

      .delivery-scooter {
        position: absolute;
        left: 100%;
        bottom: 10px;
        font-size: 50px;
        animation: delivery 5s linear infinite;
      }

      .road {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 3px;
        background: #333;
      }

      @keyframes delivery {
        0% {
          left: 100%;
          transform: rotate(0deg);
        }
        10% {
          transform: rotate(-5deg);
        }
        20% {
          transform: rotate(5deg);
        }
        30% {
          transform: rotate(-5deg);
        }
        40% {
          transform: rotate(5deg);
        }
        50% {
          transform: rotate(0deg);
        }
        100% {
          left: -100px;
        }
      }

      .order-details {
        transition: all 0.3s ease;
      }

      .order-details:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
      }
    </style>
  </head>
  <body>
    <%- include("partials/nav") %>

    <div class="container my-5">
      <!-- Success Message -->
      <div class="confirmation-header text-center">
        <h1><i class="bi bi-check-circle-fill"></i> Order Successful!</h1>
        <p class="lead mb-0">
          Your order is our first priority and will be arriving soon!
        </p>
      </div>

      <!-- Order Details Card -->
      <div class="card shadow-sm order-details">
        <div class="card-body">
          <h3 class="card-title mb-4">Order Details</h3>

          <div class="row">
            <div class="col-md-6">
              <h5 class="card-title">Ordered By: <%= order.user.username %></h5>
              <p class="card-text">
                <strong>Item:</strong> <%= order.menuItem.name %>
              </p>
              <p class="card-text">
                <strong>Taste:</strong> <%= order.menuItem.taste %>
              </p>
            </div>
            <div class="col-md-6">
              <p class="card-text">
                <strong>Price:</strong> â‚¹<%= order.menuItem.price %>
              </p>
              <p class="card-text">
                <strong>Quantity:</strong> <%= order.quantity %>
              </p>
              <p class="card-text">
                <strong>Status:</strong>
                <span class="badge bg-warning text-dark"
                  ><%= order.status %></span
                >
              </p>
            </div>
          </div>

          <div class="alert alert-success mt-4">
            <p class="mb-0">
              <strong>Your Order Code:</strong>
              <span class="h5"><%= order.orderCode %></span><br />
              <small>Please do not share this code with anyone else.</small>
            </p>
          </div>

          <div class="d-flex justify-content-between mt-4">
            <a href="/menu" class="btn btn-outline-primary">
              <i class="bi bi-menu-button"></i> Back to Menu
            </a>
            <a href="/" class="btn btn-primary">
              <i class="bi bi-house"></i> Back to Home
            </a>
          </div>
        </div>
      </div>

      <!-- Delivery Animation -->
      <div class="delivery-animation mt-5">
        <div class="road"></div>
        <div class="delivery-scooter">ðŸ›µ</div>
        <div class="text-center mt-3">
          <p class="text-muted">
            <i class="bi bi-geo-alt-fill text-danger"></i> Your delicious food
            is on the way!
          </p>
        </div>
      </div>
    </div>

    <%- include("partials/scripts") %>

    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
  </body>
</html>
