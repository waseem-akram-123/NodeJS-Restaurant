<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head") %>
    <title>Signin</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container my-5">
      <h2>Signin</h2>
      <form action="/person/signin" method="POST">
        <div class="mb-3">
          <label>Email</label>
          <input name="email" type="email" class="form-control" required />
        </div>
        <div class="mb-3">
          <label>Password</label>
          <input
            name="password"
            type="password"
            class="form-control"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Signin</button>
      </form>
    </div>

    <%- include("./partials/scripts") %>
  </body>
</html>
